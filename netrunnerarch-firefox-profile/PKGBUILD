pkgname=netrunnerarch-firefox-profile
pkgver=0+git20140228.0192ec3
pkgrel=1
pkgdesc="Default Firefox settings for Netrunner"
arch=('any')
url='https://github.com/netrunnerarch/netrunnerarch-firefox-profile'
license=('GPL')
depends=('firefox-kde')
makedepends=('git')
source=('git://github.com/netrunnerarch/netrunnerarch-firefox-profile.git')
md5sums=('SKIP')

pkgver() {
cd "$srcdir/netrunnerarch-firefox-profile"
printf "0+git`date +%Y%m%d`.%s"  "$(git rev-parse --short HEAD)"
}


package() {
  cd $srcdir/netrunnerarch-firefox-profile 
  cp -aR etc $pkgdir/
}
