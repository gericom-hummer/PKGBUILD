# Maintainer:James Kittsmiller <jameskittsmiller@gmail.com>
pkgname=netrunner-rolling-system-settings-2015.06
pkgver=1.0
pkgrel=1
pkgdesc="Default system settings for Netrunner Rolling 2015.06"
arch=('any')
url='https://github.com/netrunner-rolling/netrunner-rolling-system-settings'
license=('GPL')
groups=('kde')
makedepends=('git')
source=('git://github.com/netrunner-rolling/netrunner-rolling-system-settings#branch=2015.06')
md5sums=('SKIP')
package() {
  cd $srcdir/netrunner-rolling-system-settings
  cp -aR etc $pkgdir/
  cp -aR usr $pkgdir/
  mkdir -p "${pkgdir}/var/lib/samba/usershare"
  chgrp users "${pkgdir}/var/lib/samba/usershare"
  chmod 1775 "${pkgdir}/var/lib/samba/usershare"
  
}
