pkgname=netrunner-desktop-containment
pkgver=5.5.4
pkgrel=2
pkgdesc='The Netrunner Desktop containment'
arch=('i686' 'x86_64')
license=('LGPL')
depends=('plasma-desktop')
makedepends=('git' 'extra-cmake-modules' 'kdoctools' 'python' 'plasma-framework')
groups=('plasma')
source=("git://github.com/netrunner/netrunner-desktop-containment#branch=plasma5.5")
md5sums=('SKIP')
build() {
  cd ${srcdir}/${pkgname}
  
  mkdir -p build
  cd build
  cmake ../ \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DLIBEXEC_INSTALL_DIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd ${srcdir}/${pkgname}/build
  make DESTDIR="${pkgdir}" install
}
 
